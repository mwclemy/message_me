<h2 class="ui center aligned header">Welcome to MessageMe - a complete Chat App</h2>
<h4 class="ui center aligned icon header">
  <i class="circular orange coffee icon"></i>
  Log in to continue
</h4>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
      <%= form_with(scope: :sessions, url: login_path, class: "ui form", local: true) do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui orange submit button" %>
      </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>